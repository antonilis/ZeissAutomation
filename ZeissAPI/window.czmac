import clr
from Zen import ZenWindow, ZenApplication

# Pokaż proste okno z polem wejściowym
window = ZenWindow()
window.Title = "Podaj liczbę"
window.AddNumeric("value", "Wpisz liczbę", 1)

if window.Show():
    liczba = int(window.GetValue("value"))
    wynik = liczba * 2

    # Zapisz wynik do pliku
    path = r"C:\Temp\macro_result.txt"
    with open(path, "w") as f:
        f.write(str(wynik))
